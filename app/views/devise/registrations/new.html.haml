%h2 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  .field
    = f.label :first_name
    %br/
    = f.text_field :first_name, autofocus: true, placeholder: "First Name" 
  .field  
    = f.label :last_name
    %br/
    = f.text_field :last_name, autofocus: true, placeholder: "Last Name"
  .field
    = f.label :email
    %br/
    = f.email_field :email, autofocus: true, placeholder: "Email"
  .field
    = f.label :password
    - if @validatable
      %em
        (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, autocomplete: "off", placeholder: "Password"
  .field
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm password"
  .actions
    = f.submit "Sign up"
= render "devise/shared/links"
